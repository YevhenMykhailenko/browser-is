{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/no-var-requires": 0
      }
    }
  ]
}